<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Fri"/>

    <ImageView
        android:id="@+id/image_type"
        android:layout_width="@dimen/icon_size_min"
        android:layout_height="@dimen/icon_size_min"
        android:layout_marginTop="8dp"
        android:contentDescription="Image Icon Category"
        app:layout_constraintEnd_toEndOf="@+id/text_date"
        app:layout_constraintStart_toStartOf="@+id/text_date"
        app:layout_constraintTop_toBottomOf="@+id/text_date"
        app:srcCompat="@drawable/ic_dribbble_white_48dp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/text_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/image_type"
        app:layout_constraintStart_toStartOf="@+id/image_type"
        app:layout_constraintTop_toBottomOf="@+id/image_type"
        tools:text="44%"/>

    <TextView
        android:id="@+id/text_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/text_last_performance"
        app:layout_constraintStart_toStartOf="@+id/text_last_performance"
        app:layout_constraintTop_toBottomOf="@+id/text_last_performance"
        tools:text="78"/>

</androidx.constraintlayout.widget.ConstraintLayout>
