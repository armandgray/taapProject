<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="64dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/white"
        tools:text="Fri"/>

    <ImageView
        android:id="@+id/image_type"
        android:layout_width="@dimen/icon_size_tiny"
        android:layout_height="@dimen/icon_size_tiny"
        android:layout_marginTop="8dp"
        android:contentDescription="Image Icon Category"
        app:srcCompat="@drawable/ic_dribbble_white_48dp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/text_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        tools:text="44%"/>

    <TextView
        android:id="@+id/text_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        tools:text="78"/>

</LinearLayout>
