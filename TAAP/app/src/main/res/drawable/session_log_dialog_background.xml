<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- lower rectangle (shadow color) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- upper rectangle (background color) -->
    <item
        android:bottom="@dimen/session_log_dialog_border_width"
        android:left="@dimen/session_log_dialog_border_width"
        android:right="@dimen/session_log_dialog_border_width"
        android:top="@dimen/session_log_dialog_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>